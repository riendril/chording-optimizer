# KeyLayout: Canary
# Keyboard Format: Matrix
# Keyset: Main block (letters and base layer symbols that are defined in the layout spec)
# Host layout interpretation: US ANSI

# Format: "char" [vertical distance to resting position, horizontal distance to resting position]
# positive values indicate stretch, negative numbers indicate pinch

LEFT_HAND {
  PINKY {
    "w" [1,0]    # higher position 
    "c" [0,0]    # home position
    "q" [-1,0]   # lower position
  }
  
  RING {
    "l" [1,0]
    "r" [0,0]
    "j" [-1,0]
  }
  
  MIDDLE {
    "y" [1,0]
    "s" [0,0]
    "v" [-1,0]
  }
  
  INDEX {
    "p" [1,0]
    "t" [0,0]
    "d" [-1,0]
    "b" [1,1]   # diagonal: higher and outward
    "g" [0,1]
    "k" [-1,1]
  }

  THUMB {
                # none assigned
  }
}

RIGHT_HAND {
  THUMB {

  }

  INDEX {
    "z" [1,1]
    "m" [0,1]
    "x" [-1,1]
    "f" [1,0]
    "n" [0,0]
    "h" [-1,0]
  }
  
  MIDDLE {
    "o" [1,0]
    "e" [0,0]
    "/" [-1,0]
  }
  
  RING {
    "u" [1,0]
    "i" [0,0]
    "," [-1,0]
  }
  
  PINKY {
    "'" [1,0]   # US-ANSI quote
    "a" [0,0]
    "." [-1,0]
#   ";" [0,1]   # unassigned
#   "[" [-1,1]  # unassigned
#   "]" [1,1]   # unassigned
  }
}
